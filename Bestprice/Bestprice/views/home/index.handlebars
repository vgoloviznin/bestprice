<div class="page-header">
	<h1>Лучшая цена</h1>
</div>

<div class="row form-group">
	<div class="col-xs-12 col-sm-6 col-md-8">
		<form class="row" role="form" method="GET" action="/">
			<div class="col-md-10 form-group">
				<input type="search" class="form-control input-lg name-autocomplete" name="search" placeholder="Название" {{#if search}}value="{{search}}"{{/if}}>
			</div>
				
			<div class="col-md-2">
				<button type="submit" class="btn btn-success btn-lg">Поиск</button>
			</div>
		
		</form>
	</div>
</div>


{{#if model.length}}<div class="row">{{#each model}}{{> product/product}}{{/each}}</div>{{/if}}
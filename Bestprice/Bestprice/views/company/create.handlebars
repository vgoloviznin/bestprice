<div class="page-header">
	<h1>Создать компанию</h1>
</div>


<form role="form" method="POST" action="/company/create">
	<div class="form-group">
		<label for="name">Название</label>
		<input class="form-control name-autocomplete" type="text" name="name" placeholder="Название" required="required" {{#if model}}value="{{model.name}}"{{/if}} >
	</div>
	<div class="form-group">
		<label for="description">Описание</label>
		<textarea class="form-control" rows="3" type="textarea" name="description" placeholder="Описание" {{#if model}}value="{{model.description}}"{{/if}}></textarea>
	</div>

	<button type="submit" class="btn btn-primary">Создать</button>
</form>
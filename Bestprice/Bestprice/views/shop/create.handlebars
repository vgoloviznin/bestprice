<div class="page-header">
	<h1>Создать магазин</h1>
</div>


<form role="form" method="POST" action="/shop/create">
	<div class="form-group">
		<label for="name">Название</label>
		<input class="form-control" type="text" name="name" placeholder="Название" required="required" {{#if model}}value="{{model.name}}"{{/if}} >
	</div>
	<div class="form-group">
		<label for="description">Описание</label>
		<textarea class="form-control" type="textarea" rows="3" name="description" placeholder="Описание" {{#if model}}value="{{model.description}}"{{/if}}></textarea>
	</div>
	<div class="form-group">
		<label for="address">Адрес</label>
		<input class="form-control" type="text" name="address" placeholder="Адрес" {{#if model}}value="{{model.address}}"{{/if}}>
	</div>

	<button type="submit" class="btn btn-primary">Создать</button>
</form>
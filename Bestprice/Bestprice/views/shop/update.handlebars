<div class="page-header">
	<h1>Редактирование {{model.name}}</h1>
</div>


<form role="form" method="POST" action="/shop/update">
	<input type="hidden" name="id" value="{{model._id}}">

	<div class="form-group">
		<label for="name">Название</label>
		<input class="form-control" type="text" name="name" placeholder="Название" required="required" value="{{model.name}}">
	</div>
	<div class="form-group">
		<label for="description">Описание</label>
		<textarea class="form-control" type="textarea" rows="3" name="description" placeholder="Описание">{{model.description}}</textarea>
	</div>
	<div class="form-group">
		<label for="address">Адрес</label>
		<input class="form-control" type="text" name="address" placeholder="Адрес" value="{{model.address}}">
	</div>

	<button type="submit" class="btn btn-primary">Редактировать</button>
</form>